<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FB"
    tools:context=".PatientsVitalSigns">

    <!-- Title -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Patientâ€™s Vital Signs"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/vitalsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/patientHeartRate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Heart Rate (bpm)"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="number"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/patientBloodPressure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Blood Pressure (e.g., 120/80)"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/patientCholesterol"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Cholesterol (mg/dL)"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="number"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnVitalSignsNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2E86DE"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/vitalsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
