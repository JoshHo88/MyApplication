<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".ViewHistory">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHistoryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient History"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/patientDetailsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPatientAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: " />

            <TextView
                android:id="@+id/tvPatientGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: " />

            <TextView
                android:id="@+id/tvPatientWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: " />

            <TextView
                android:id="@+id/tvPatientHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: " />

            <TextView
                android:id="@+id/tvPatientSmoker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smoker: " />

            <TextView
                android:id="@+id/tvPatientHeartDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Disease: " />

            <TextView
                android:id="@+id/tvPatientDiabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes: " />

            <TextView
                android:id="@+id/tvPatientHypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hypertension: " />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scrollable History List -->
    <ScrollView
        android:id="@+id/scrollHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/patientDetailsCard"
        app:layout_constraintBottom_toTopOf="@+id/btnHistoryBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example History Item 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 10 October 2025"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#2E86DE"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summary: Stable vitals, mild cholesterol increase observed."
                        android:textSize="15sp"
                        android:textColor="#34495E"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor: Dr. M. Khoza"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Follow-up: In 3 months"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Example History Item 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android.layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 05 August 2025"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#2E86DE"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summary: High blood pressure detected. Medication prescribed."
                        android:textSize="15sp"
                        android:textColor="#34495E"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor: Dr. M. Khoza"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Follow-up: In 2 months"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistoryBack"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="40dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#2E86DE"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="12dp"
        app:strokeColor="#2E86DE"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
