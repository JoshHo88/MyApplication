<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FB"
    tools:context=".PatientsActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Patientâ€™s Activity"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/inputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/patientActivityType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Type of Activity"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/patientDuration"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Duration (minutes)"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="number"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/patientCalories"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Calories Burned"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="number"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/patientDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Date (DD/MM/YYYY)"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="date"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/patientFood"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Food Intake"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="#2C3E50"
                android:textColorHint="#A0A0A0"
                android:layout_marginBottom="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnPatientActivityNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2E86DE"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/inputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- ðŸ”¹ AI Activity Checker Section -->
    <TextView
        android:id="@+id/aiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Activity Check ðŸ¤–"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnPatientActivityNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCheckActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check Activity"
        android:backgroundTint="#27AE60"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/aiTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/aiResponse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#2C3E50"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:padding="6dp"
        android:background="#EEF3F7"
        app:layout_constraintTop_toBottomOf="@id/btnCheckActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
